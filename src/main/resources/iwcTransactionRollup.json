    "rollup" : {
      "properties" : {
        "uid" : { "type" : "integer" },
        "date" : { "type" : "date", "format" : "MM/dd/yyyy" },
        "amountPast7" : { "type" : "double" },
        "amountPast30" : { "type" : "double" },
        "amountPast90" : { "type" : "double" },
        "amountPast180" : { "type" : "double" },
        "amountPast365" : { "type" : "double" },
        "isMember" : { "type": "boolean" }
      }
    }
  }
}